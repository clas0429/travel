rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() { return request.auth != null; }
    function isAdmin() { return request.auth.token.role == 'admin'; }

    match /locations/{locId}/{allPaths=**} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }
  }
}
